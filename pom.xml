<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- 1. Project Coordinates -->
    <groupId>com.application</groupId>
    <artifactId>E2EE-Disposable-Chat-App</artifactId>
    <version>1.0-SNAPSHOT</version> <!-- Or update version as needed -->

    <!-- 2. Properties -->
    <properties>
        <!-- Java version for compilation -->
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <!-- File encoding -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- Define the main class for the executable JAR -->
        <main.class>com.application.FrontEnd.MainFrame</main.class>
    </properties>

    <!-- 3. Dependencies -->
    <dependencies>
        <!-- Pusher WebSocket Client (for listening) -->
        <dependency>
            <groupId>com.pusher</groupId>
            <artifactId>pusher-java-client</artifactId>
            <version>2.4.0</version> <!-- Check for latest stable version -->
        </dependency>
        <!-- Pusher HTTP Client (for sending via API) -->
        <dependency>
            <groupId>com.pusher</groupId>
            <artifactId>pusher-http-java</artifactId>
            <version>1.3.0</version> <!-- Check for latest stable version -->
        </dependency>
        <!-- JSON Handling Library -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.10.1</version> <!-- Use a recent stable version -->
        </dependency>
        <!-- Logging Facade -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>2.0.7</version> <!-- Match implementation version -->
        </dependency>
        <!-- Simple Logging Implementation (for console output) -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>2.0.7</version> <!-- Match API version -->
            <!-- Runtime scope: only needed when running, not for compilation -->
            <scope>runtime</scope>
        </dependency>
        <!-- Swing/AWT are part of standard Java SE (JDK/JRE 8+) -->
        <!-- No explicit Swing dependency needed -->
    </dependencies>

    <!-- 4. Build Configuration -->
    <build>
        <plugins>
            <!-- Compiler Plugin: Ensure correct Java version -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version> <!-- Or a newer stable version -->
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <!-- No excludes needed, compile all source code -->
                </configuration>
            </plugin>

            <!-- Assembly Plugin: Create the executable "fat JAR" -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.3.0</version> <!-- Or a newer stable version -->
                <configuration>
                    <archive>
                        <manifest>
                            <!-- Set the main class using the property defined above -->
                            <mainClass>${main.class}</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <!-- Include all dependencies in the JAR -->
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <!-- Bind the assembly creation to the 'package' phase -->
                    <execution>
                        <id>make-assembly</id> <!-- Unique ID for the execution -->
                        <phase>package</phase> <!-- Run when 'mvn package' is executed -->
                        <goals>
                            <goal>single</goal> <!-- Execute the assembly:single goal -->
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- 5. Profiles Section Removed -->
    <!-- No longer needed for the integrated application build -->
    <!-- <profiles> ... </profiles> -->

</project>